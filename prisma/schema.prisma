generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(100)
  password_encrypt  String   @db.VarChar(255)
  first_name String   @db.VarChar(100)
  last_name  String   @db.VarChar(100)
  created_at DateTime @default(now()) @db.Timestamp(6)

  roles UserRole[]
  vehicles Vehicle[]
  reservations Reservation[]
  sessions ParkingSession[]
}

model Role {
  role_id   Int    @id @default(autoincrement())
  role_name String @db.VarChar(50)
  description String? @db.Text

  users UserRole[]
}

model UserRole {
  user_id Int
  role_id Int

  user User @relation(fields: [user_id], references: [user_id])
  role Role @relation(fields: [role_id], references: [role_id])

  @@id([user_id, role_id])
}

model Vehicle {
  vehicle_id   Int      @id @default(autoincrement())
  user_id      Int
  license_plate String   @unique @db.VarChar(15)
  make         String?   @db.VarChar(50)
  model        String?   @db.VarChar(50)

  user User @relation(fields: [user_id], references: [user_id])
  
  sessions ParkingSession[]
  reservations Reservation[]
}

model ParkingLot {
  lot_id      Int      @id @default(autoincrement())
  name    String   @db.VarChar(255)
  address    String   @db.VarChar(255)
  city String    @db.VarChar(100)
  hourly_rate  Decimal    @db.Decimal(5, 2)
  total_capacity Int

  spaces ParkingSpace[]
}

model ParkingSpace {
  space_id    Int      @id @default(autoincrement())
  lot_id      Int
  space_type  String   @db.VarChar(50)
  is_occupied  Boolean  @default(false)

  lot ParkingLot @relation(fields: [lot_id], references: [lot_id])

  sessions ParkingSession[]
  reservations Reservation[]
}

model ParkingSession {
  session_id   Int      @id @default(autoincrement())
  user_id      Int
  space_id     Int
  vehicle_id   Int
  entry_time   DateTime @default(now()) @db.Timestamp(6)
  exit_time    DateTime? @db.Timestamp(6)
  total_cost  Decimal?   @db.Decimal(10, 2)
  status      String   @default("active") @db.VarChar(50)

  user User @relation(fields: [user_id], references: [user_id])
  space ParkingSpace @relation(fields: [space_id], references: [space_id])
  vehicle Vehicle @relation(fields: [vehicle_id], references: [vehicle_id])
}

model Reservation {
  reservation_id Int      @id @default(autoincrement())
  vehicle_id   Int
  space_id    Int
  user_id     Int
  start_time   DateTime @db.Timestamp(6)
  end_time    DateTime @db.Timestamp(6)
  status      String   @default("Active") @db.VarChar(50)

  user User @relation(fields: [user_id], references: [user_id])
  vehicle Vehicle @relation(fields: [vehicle_id], references: [vehicle_id])
  space ParkingSpace @relation(fields: [space_id], references: [space_id])
}